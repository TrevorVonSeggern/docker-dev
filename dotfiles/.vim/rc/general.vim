set lazyredraw

" line endings
set fileformats=unix,mac,dos

" tab configuration
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4

" can use backspace
set backspace=indent,eol,start

" sync clipboard
set clipboard=unnamedplus


set wildignore+=*/.git/*,*/.idea/*,*/.DS_Store

set visualbell t_vb=         " No beep sound
set noerrorbells
set novisualbell

set secure



